{
    "compilerOptions": {
        "outDir": "./built/",
        "strictPropertyInitialization": false,
        "target": "es5",
        "module": "es2015",
        "lib": ["dom", "es2015"],
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
        "node",
        "jest"
        ],
        "paths": {
        "@/*": [
            "src/*"
        ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "tests/**/*.ts"
    ],
  "exclude": [
    "node_modules"
  ]
}